<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns:local="clr-namespace:Assignment2"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Assignment2.AddRecord"
    Title="Add Record">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Home" Clicked="navHome" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout
            Margin="10,10,10,10">
            <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Add Punch Record">
                   <local:PunchCell dateCellLabel="Date: "
                                    x:Name="punchCell"/>
                    <local:TimeCell timeCellLabel="Time: "
                                    x:Name="timeCell"/>
                    <ViewCell>
                        <Button
                            Text="Add"
                            Clicked="addRecord"/>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
